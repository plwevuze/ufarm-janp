doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Agricultural Officer
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/home.css')
  link(rel='stylesheet' href='/css/style.css')
header
  //-##############****************** NAVBAR ****************#############
  nav
    .header
      img.logo1(src='/images/ufarm logo.png' alt='logo')
      #nnb.navbar
        a(href='home.html') Home   |
.container
  form#signup.form(action='/register/agriculturalOfficer' method='post' name='registration')
    br
    h1 Agricultural Officer  Registration Form
    h5 New to Ufarm? Create AO account here!
    .row.g-3
      .col
        label.form-label(for='inputEmail4') User ID
        input#userId.form-control(type='text' name='userId' placeholder='FO ID' aria-label='NIN')
      .col
        label.form-label(for='inputEmail4') First Name
        input#fname.form-control(type='text' name='fname' placeholder='John' aria-label='name')
      .col
        label.form-label(for='inputEmail4') Last Name
        input#lname.form-control(type='text' name='lname' placeholder='mukasa' aria-label='name')
    .row.g-3
      .col
        label.form-label(for='inputEmail4') Role
        select#region.form-control(name='role' title='region')
          option Agricultural Officer
      .col
        label.form-label(for='inputCity') Date Of Registration
        input#inputDOB.form-control(type='date' name='registration_date' placeholder='mm/dd/yy')
      .col
        label.form-label(for='inputEmail4') NIN
        input#nin.form-control(type='text' name='nin' placeholder='CM9830HF4243FH-FK' aria-label='NIN')
    .row.g-3
      .col
        label.form-label(for='inputEmail4') Email Address
        input#email.form-control(type='text' name='email' placeholder='example@gmail.com' aria-label='First name')
      .col
        label.form-label(for='inputEmail4') Type of Residence
        select#occupation.form-control(name='residence_type' title='region')
          option landlord
          option Tenant
      .col
        label.form-label(for='inputZip') Tel. Number
        input#phone-number1.form-control(type='text' name='phoneNumber' placeholder='+256-7xx-xxx-xxx')
    .row.g-3
      .col
        label(for='gender') Gender:
        .radio
          input#gender1(type='radio' name='gender' autocomplete='off' value='male' placeholder='male')
          span Male
          input#gender2(type='radio' name='gender' autocomplete='off' value='female' placeholder='gender')
          span Female
      .col
        label(for='languages') Marital Status
        .radio
          input#status1(type='checkbox' name='Single' autocomplete='off' value='Single' placeholder='single')
          span Single
          input#status2(type='checkbox' name='Married' autocomplete='off' value='Married' placeholder='married')
          span Married
          input#status4(type='checkbox' name='Divorced' autocomplete='off' value='Divorced' placeholder='devorced')
          span Divorced
      .row.g-3
        .col
          label.form-label(for='password') Password:
          input#password.form-control(type='password' name='password' required='')
        .col
          label.form-label(for='password') Confirm Password:
          input#concirm_password.form-control(type='password' placeholder='************' name='confirm_password' required='')
        .form-field
          input#submit.btn(type='submit' value='Register' onclick='agriculturalOffcer ()')
          small
